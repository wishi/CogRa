<?xml version="1.0"?>
<block>
	<name>IEEE 802.15.4 Sink</name>
	<key>cogra_ieee_802_15_4_sink</key>
	<category>cogra</category>
	<import>import cogra</import>
	<make>cogra.ieee_802_15_4_sink($threshold, $filename)</make>

	<param>
		<name>Threshold</name>
		<key>threshold</key>
		<value>1</value>
		<type>int</type>
	</param>

	<param>
		<name>File</name>
		<key>filename</key>
		<type>file_save</type>
	</param>

	<sink>
		<name>in</name>
		<type>float</type>
	</sink>
	<doc>IEEE 802.15.4 Packet Sink with Chips To Symbols Mapping</doc>
</block>
